{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "es5",
      "dom",
      "es2015",
      "es2016.array.include",
      "es2017.object"
    ],
    "types": [
      "core-js",
      "node",
      "jasmine",
      "webpack-env",
      "jest"
    ]
  },
  "compileOnSave": false,
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  }
}
